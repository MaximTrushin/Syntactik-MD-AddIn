<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>

  <Extension path = "/MonoDevelop/Ide/ProjectTemplates">
    <ProjectTemplate id = "SyntactikProject" resource = "Syntactik.MonoDevelop.Templates.SyntactikProject.xpt.xml"/>
  </Extension>

  <Extension path = "/MonoDevelop/ProjectModel/LanguageBindings">
    <LanguageBinding id = "S4X"
		                 extensions = ".s4x"
		                 singleLineCommentTag = "'''"
		                 blockCommentStartTag = '"""'
		                 blockCommentEndTag = '"""' />
  </Extension>

  <Extension path="/MonoDevelop/ProjectModel/MSBuildItemTypes">
    <ProjectType
        extension="s4xproj"
        guid = "{2857B73E-F847-4B02-9238-064979017E34}"
        alias = "SyntactikProject"
        type="Syntactik.MonoDevelop.SyntactikProject" 
        msbuildSupport ="NotSupported "/>
  </Extension>

  <Extension path = "/MonoDevelop/Ide/TextEditorExtensions">
    <Class class = "Syntactik.MonoDevelop.Parser.ErrorHandlerTextEditorExtension" />
    <Class fileExtensions = ".s4x" class = "Syntactik.MonoDevelop.Highlighting.HighlightUsagesExtension" />
  </Extension>

  <Extension path = "/MonoDevelop/Core/MimeTypes">
    <MimeType id="text/x-syntactik4xml" _description="Syntactik for XMl source code" icon="md-csharp-file" isText="true">
      <File pattern="*.s4x" />
    </MimeType>
    <MimeType id="application/x-syntactik4xmlproject" _description="S4X-project file" baseType="application/x-msbuild">
      <File pattern="*.s4xproj" />
    </MimeType>
  </Extension>

  <Extension path = "/MonoDevelop/SourceEditor2/SyntaxModes">
    <Templates id = "SyntactikSyntaxMode" resource = "Syntactik.MonoDevelop.Templates.SyntactikSyntaxMode.xml"/>
  </Extension>

  <Extension path = "/MonoDevelop/TypeSystem/Parser">
    <Parser class="Syntactik.MonoDevelop.Parser.TypeSystemParser" mimeType = "text/x-syntactik4xml" />
  </Extension>
  
  <Extension path = "/MonoDevelop/TypeSystem/FoldingParser">
    <Parser class = "Syntactik.MonoDevelop.Parser.SyntactikFoldingParser" mimeType="text/x-syntactik4xml" />
  </Extension>
  
  
</ExtensionModel>